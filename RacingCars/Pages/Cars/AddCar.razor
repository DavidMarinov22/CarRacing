@page "/Cars/AddCar"

@using RacingCars.Interfaces
@using RacingCars.VMs

<h3>Add a new Car</h3>
<EditForm Model="@car" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <p>
      <label>
            Name
            <br />
            <InputText class="form-control" placeholder="Insert car name"  @bind-Value="car.Name" />
            <ValidationMessage For="@(() => car.Name)"></ValidationMessage>
        </label>
    </p>
    <p>
        <label>
            Brand
            <br />
            <InputText class="form-control" placeholder="Insert car brand" @bind-Value="car.Brand" />
            <ValidationMessage For="@(() => car.Brand)"></ValidationMessage>
        </label>
    </p>
    <p>
        <label>
            Mileage
            <br />
            <InputNumber class="form-control" @bind-Value="car.Mileage" />
            <ValidationMessage For="@(() => car.Mileage)"></ValidationMessage>
        </label>
    </p>
    <p>
        <label>
            Date of Service
            <br />
            <SfDatePicker placeholder="dd/mm/yyyy" Format="dd.MM.yyyy" @bind-Value="@car.DateOfService"></SfDatePicker>
            <ValidationMessage For="@(() => car.DateOfService)"></ValidationMessage>
        </label>
    </p>

   <SfButton Content="Add"></SfButton>
   <SfButton Content="Cancel" OnClick="@Navigate"></SfButton>

</EditForm>

